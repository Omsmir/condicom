{
    "jsc": {
        "parser": {
            "syntax": "typescript",
            "tsx": false,
            "dynamicImport": true,
            "decorators": true
        },
        "transform": {
            "legacyDecorator": true,
            "decoratorMetadata": true
        },
        "target": "esnext",
        "externalHelpers": false,
        "keepClassNames": true,
        "loose": false,
        "minify": {
            "compress": false,
            "mangle": false
        },
        "baseUrl": "src",
        "paths": {
            "@/*": ["*"],
            "@config": ["src/config"],
            "@controllers/*": ["controllers/*"],
            "@dtos/*": ["dtos/*"],
            "@exceptions/*": ["exceptions/*"],
            "@interfaces/*": ["interfaces/*"],
            "@middlewares/*": ["middlewares/*"],
            "@models/*": ["models/*"],
            "@routes/*": ["routes/*"],
            "@schemas/*": ["schemas/*"],
            "@services/*": ["services/*"],
            "@utils/*": ["utils/*"],
            "@templates/*": ["templates/*"]
        }
    },
    "module": {
        "type": "nodenext"
    }
}
